<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".GOTTActivity"
    android:id="@+id/app">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START COUNTDOWN"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="119dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal|bottom"
        android:onClick="startClock">

    </Button>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Turn phone off in "
        android:layout_gravity="left|center_vertical" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView1"
        android:text=" minute(s)"
        android:layout_toRightOf="@+id/spinner_minutes"
        android:layout_gravity="right|center_vertical"
        />

    <Spinner
        android:id="@+id/spinner_minutes"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:layout_toLeftOf="@+id/textView2"
        android:drawSelectorOnTop="true"
        android:layout_gravity="center"
        android:padding="0dip"/>

    <TextView
        android:layout_width="181dp"
        android:layout_height="140dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/timeLeft"
        android:layout_gravity="center_horizontal|top"
        android:gravity="center_vertical|center_horizontal" />

    <CheckBox
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:text="Shitty Restart Implementation"
        android:id="@+id/checkBox"
        android:layout_gravity="center_horizontal|bottom" />


</FrameLayout>
